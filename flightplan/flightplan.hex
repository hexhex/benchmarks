visit(L, I) v nvisit(L, I) :- location(L, D), #int(I).
visited(L) :- visit(L, I).
visited(I) :- visit(L, I).
:- location(L, D), not visited(L).
:- #int(I1), #int(I2), #int(I3), visited(I1), visited(I2), I3 > I1, I3 < I2, not visited(I3).
:- visit(L, I1), visit(L, I2), I1 != I2, I1 != 0, I2 != 0.
:- visit(L1, I), visit(L2, I), L1 != L2.

exploitTwoWayTicket v notExploitTwoWayTicket.

% Strategy 1: multi-stop flight
query(I1, L1, L2, 2015, 7, D) :- notExploitTwoWayTicket, visit(L1, I1), visit(L2, I2), I2 = I1 + 1, I1 = 0, start(D).
query(I1, L1, L2, 2015, 7, D) :- notExploitTwoWayTicket, visit(L1, I1), visit(L2, I2), I2 = I1 + 1, I1 > 0, query(Prev, X, Y, Year, Month, PrevDay), Prev = I1 - 1, D = PrevDay + Duration, location(L1, Duration).
costs(C) :- notExploitTwoWayTicket, &cost[query](C).

% Strategy 2: two-way ticket to one of the locations, multi-stop flight to visit the rest
queryTW(0, L1, L2, 2015, 7, D) :- exploitTwoWayTicket, visit(L1, I1), visit(L2, I2), I2 = I1 + 1, I1 = 0, start(D).
queryTW(1, L2, L1, 2015, 7, D) :- exploitTwoWayTicket, visit(L1, I1), visit(L2, I2), I2 = I1 + 1, I1 = 0, back(D).

queryMS(1, L1, L2, 2015, 7, DD) :- exploitTwoWayTicket, visit(L1, I1), visit(L2, I2), I2 = I1 + 1, I1 = 1, start(D), location(L1, Duration), DD = D + Duration.
queryMS(I1, L1, L2, 2015, 7, D) :- exploitTwoWayTicket, visit(L1, I1), visit(L2, I2), I2 = I1 + 1, I1 > 0, queryMS(Prev, X, Y, Year, Month, PrevDay), Prev = I1 - 1, D = PrevDay + Duration, location(L1, Duration), visit(StartLocation, 0), L2 != StartLocation.
queryMS(I1, L1, FirstLocation, 2015, 7, D) :- exploitTwoWayTicket, visit(L1, I1), visit(L2, I2), I2 = I1 + 1, I1 > 0, queryMS(Prev, X, Y, Year, Month, PrevDay), Prev = I1 - 1, D = PrevDay + Duration, location(L1, Duration), visit(StartLocation, 0), L2 = StartLocation, queryTW(0, StartLocation, FirstLocation, Year, Month, Day).
back(D) :- exploitTwoWayTicket, visit(L1, I1), visit(L2, I2), I2 = I1 + 1, I1 > 0, queryMS(Prev, X, Y, Year, Month, PrevDay), Prev = I1 - 1, D = PrevDay + Duration, location(L1, Duration), visit(StartLocation, 0), L2 = StartLocation.
queryMSR(IR, L1, L2, Y, M, D) :- queryMS(I, L1, L2, Y, M, D), IR = I - 1.
costs(C) :- exploitTwoWayTicket, &cost[queryTW](C1), &cost[queryMSR](C2), C = C1 + C2.
